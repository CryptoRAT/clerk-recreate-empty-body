{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "module": "nodenext",
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
